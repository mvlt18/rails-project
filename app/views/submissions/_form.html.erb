
<br><br>

<%= form_for @submission do |f| %>
<%= f.hidden_field :user_id, :value=> session[:user_id] %>

  <%= f.label :college_id, "Select a College" %>
  <%= f.collection_select :college_id, College.all, :id, :name, prompt: true %><br><br>

  <%= f.label :program %>
  <%= f.text_field :program %><br>

  <%= f.label :website %>
  <%= f.text_field :website %><br>

  <%= f.label :degree %>
  <%= f.text_field :degree %><br>

  <%= f.label :faculty %>
  <%= f.text_field :faculty %><br>

  <%= f.label :application_cost %>
  <%= f.text_field :application_cost %><br>

  <%= f.label :lor %>
  <%= f.text_field :lor %><br>

  <%= f.label :deadline %>
  <%= f.date_field :deadline %><br>

  <%= f.label :date_submitted %>
  <%= f.date_field :date_submitted %><br>

  <%= f.label :status%>
  <%= f.text_field :status %><br><br>

  <%= f.submit %>

<% end %>
