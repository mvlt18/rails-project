<div class="w3-container w3-dark-grey w3-center w3-text-light-grey w3-padding-32" id="about">
  <div class="w3-content w3-justify" style="max-width:600px">

    <h4><%=@user.name%>'s Profile</h4>
    <p>
    Undergraduate School: <%= @user.undergrad_college_name %><br>
    Major: <%= @user.undergrad_major %><br>
    Minor: <%= @user.undergrad_minor%><br>
    GPA: <%= @user.undergrad_gpa %><br>
    <br>
    Graduate School (if applicable): <%= @user.grad_college_name%><br>
    Degree: <%= @user.grad_degree%><br>
    GPA: <%= @user.grad_gpa%><br>
    <br>
    GRE scores: <%= @user.gre_scores%><br>
    GMAT scores (if applicable): <%= @user.gmat_scores%><br>
    <br>
    Experience/Research: <%= @user.experience%><br>
    </p>

    <p>
    <% if current_user.id == @user.id %>
    <%= link_to "Update Profile", edit_user_path %><br>
    <% end %>
    </p>

    <h4>Current Graduate School Applications:</h4>

    <p>
    <%@user.submissions.each do |submission|%>
    <%= link_to submission.program, user_submission_path(@user,submission) %>, <%=submission.degree%> <%="-"%> <%=submission.college.name%> <br>
    <% end %>
    </p>

  </div>
</div>

  <!--link options-->
  <div>
      <div style="display: inline-block;"><%= link_to "View all Colleges", colleges_path %></div>
      <div style="display: inline-block;">  </div>
      <div style="display: inline-block;"><%= link_to "View all Submissions", submissions_path %></div>
      <div style="display: inline-block;">  </div>
      <div style="display: inline-block;"><%= link_to "Add a New Application", new_submission_path %></div>
      <div style="display: inline-block;">  </div>
  </div>
